<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ejercicio6_5" parent="Theme.AppCompat.Light">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/grey</item> <!-- Fondo del ActionBar -->
        <item name="colorPrimaryDark">#A9A9A9</item> <!-- Color del status bar -->
        <item name="colorOnPrimary">#000000</item> <!-- Color del texto y los íconos del ActionBar -->
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>

    </style>

    <!-- Estilo personalizado para el ActionBar -->
    <style name="CustomActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/grey</item>
        <item name="titleTextStyle">@style/CustomActionBarTitleText</item>
    </style>

    <!-- Estilo personalizado para el texto del título -->
    <style name="CustomActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item> <!-- Color del texto del título -->
        <item name="android:textSize">20sp</item> <!-- Tamaño del texto -->
        <item name="android:textStyle">bold</item> <!-- Estilo del texto -->
    </style>

    <style name="Theme.Ejercicio6_5" parent="Base.Theme.Ejercicio6_5" />
</resources>